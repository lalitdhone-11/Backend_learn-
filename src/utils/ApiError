class ApiError extends Error{
    statusCode: number;
    data: null;
    message: string;
    success: boolean;
    errors: any[];

    constructor(
        statusCode: number,
       message:"Something went wrong",
        errors:[],
        statck: ""
    ){
        super(message)
        this.statusCode=statusCode
        this.data=null
        this.message=message
        this.success=false;
        this.errors=errors
        
        if(statck){
            this.stack=statck
        }else{
            Error.captureStackTrace(this,this.constructor)
        }

        
    }
}

export{ApiError }